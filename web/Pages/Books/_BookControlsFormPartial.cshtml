@model Appbooks.dto.Book

<div class="row mb-2">
    <label class="col-sm-3 col-form-label" style="text-align:right;">id</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="id" value="@Model.Id" disabled />
        <input type="hidden" name="idHidden" value="@Model.Id" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label" style="text-align:right;">Name</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="name" value="@Model.Name" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label" style="text-align:right;">author</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="author" value="@Model.Author" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label" style="text-align:right;">Pages</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="pages" value="@Model.Pages" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label" style="text-align:right;">Genre</label>
    <div class="col-sm-9">
        <select name="genre" class="form-control" value="@Model.Genre" asp-for="@Model.Genre">
            <option value="">genre</option>
            <option value="History">History</option>
            <option value="Novel">Novel</option>
            <option value="Technology">Technology</option>
            <option value="Science Fiction">Science Fiction</option>
        </select>
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label" style="text-align:right;">Year</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" name="year" value="@Model.Year" />
    </div>
</div>

